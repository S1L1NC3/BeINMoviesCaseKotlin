<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:layout_marginStart="@dimen/genre_margin_start"
    android:layout_marginTop="@dimen/genre_margin_top"
    android:layout_marginEnd="@dimen/genre_margin_end"
    android:layout_marginBottom="@dimen/genre_margin_bottom">

    <TextView
        android:id="@+id/itemGenreHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawable_background_genre"
        android:gravity="center"
        android:textColor="@color/primaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>